<!-- Probably move the stylesheet to you layout. Also make sure you include the javascript. -->
<%= stylesheet_link_tag "event_calendar" %>

<h1>
	<%= "#{@month_name} #{@day}, #{@year}"%>
</h1>
<p> 
	<% if current_user.admin? %>
		<%= link_to "Create an Event", create_event_path(:start_at => "#{@month_name} #{@day} #{@year}"), class: "btn btn-large btn-primary" %><br><br>
	<% end %>
	<% if @events.empty? %>
		<center><h3> There are no events </h3></center>
	<% else %>
		<h3>Event: </h3><%= render @events%>
	<% end %>
</p>