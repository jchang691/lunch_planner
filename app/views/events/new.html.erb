<% provide(:title, 'New Event') %>
<h1>New Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
	
	  <%= render 'shared/error_messages_event' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label "Start:" %>
      <% date = params[:start_at].to_date %>
      <%= f.date_select :start_at, :default=> date, :order => [:month, :day, :year], :datetime_separator=> ' at ' %><br>

      <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>