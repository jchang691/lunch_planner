<% provide(:title, 'New Event') %>
<h1>New Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
	
	  <%= render 'shared/error_messages_event' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label "Start: Format( Month Date, Year, HH:MM:SS )" %>
      <%= f.text_field :start_at, :value => "#{params[:start_at]}" %>

      <%= f.label "End: Format( Month Date, Year, HH:MM:SS )"%>
      <%= f.text_field :end_at, :value => "#{params[:start_at]}"%>

      <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>